@model IEnumerable<AdmCRRN.Models.Transporte.EntidadeDTO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluent">
    <h2>  Cadastro de Entidades</h2>
    <p class="row-fluent">
        @Html.ActionLink("Cadastrar nova entidade", "Create", null, new { @class = "btn" })
    </p>
</div>
<table class="table table-bordered">
    <tr>
        <th>
        </th>
        <th>
            CNPJ
        </th>
        <th>
            Nome
        </th>
        <th>
            Tipo
        </th>
        <th>
            Membros
        </th>
        <th>
            Congregados
        </th>
        <th>
            Crianças
        </th>
        <th>
            Total
        </th>
    </tr>
    @foreach (var item in Model.ToList())
    {
        <tr>
            <td>
                @Html.ActionLink("Usuários", "Index", "Account", new { id = item.Id }, null) |
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Visualizar", "Details", new { id = item.Id }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.Id })
            </td>
            <td>
                @item.CNPJ
            </td>
            <td>
                @item.Nome
            </td>
            <td>
                @item.NomeTipoEntidade
            </td>
            <td>
                @item.QuantidadeMembros()
            </td>
            <td>
                @item.QuantidadeCongregados()
            </td>
            <td>
                @item.QuantidadeCriancas()
            </td>
            <td>
                @item.Membros.Count
            </td>
        </tr>
    }
</table>
