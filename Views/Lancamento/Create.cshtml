@model AdmCRRN.Models.Lancamento
@{
    ViewBag.Title = "Create";
}
<h2>
    Realizar Novo Lançamento</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskMoney.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.Mascaras.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.Fixes.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("#Data").mask("99/99/9999");
    });
</script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Lançamento</legend>
        <div class="editor-label">
            Tipo de Pagamento
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Pagamento.Id, new SelectList(ViewBag.pagamentos, "Id", "Descricao"))
        </div>
        <div class="editor-label">
            Conta
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.PlanoConta.Id, new SelectList(ViewBag.contas, "Id", "Descricao"))
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Valor)
        </div>
        <div class="editor-field moeda-real">
            @Html.EditorFor(model => model.Valor)
            @Html.ValidationMessageFor(model => model.Valor)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Historico)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Historico)
            @Html.ValidationMessageFor(model => model.Historico)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Data)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Data)
            @Html.ValidationMessageFor(model => model.Data)
        </div>
        <p>
            <input type="submit" value="Gravar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Ir para lista de lançamentos", "Index")
</div>
